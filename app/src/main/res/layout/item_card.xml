<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/white">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp"/>

            <RelativeLayout
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/header_color"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleTv"
                    android:text="Menko PMK Minta MUI Bantu Soal Pemulasaraan Jenazah"
                    android:textColor="@color/black"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="3dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp">

                    <ImageView
                        android:id="@+id/publisherIv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_publisher"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"/>

                    <TextView
                        android:layout_toEndOf="@+id/publisherIv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="CNN"
                        android:layout_marginTop="3dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true">

                    <ImageView
                        android:id="@+id/dateIv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_date"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"/>

                    <TextView
                        android:layout_toEndOf="@+id/dateIv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="17-07-2021"
                        android:layout_marginTop="3dp"/>
                </RelativeLayout>



            </RelativeLayout>
        </RelativeLayout>
            



    </androidx.cardview.widget.CardView>

</LinearLayout>